{
	"env": {
		"browser": true,
		"es6": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 8,
		"sourceType": "module",
		"ecmaFeatures": "impliedStrict"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"no-extra-parens": "error",
		"no-tabs": ["error", {"allowIndentationTabs": true}],
		"quotes": ["error", "double", {"avoidEscape": true}],
		"semi": ["error", "always"]
	}
}
